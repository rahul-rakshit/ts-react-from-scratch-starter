{
  "name": "react-from-scratch",
  "version": "0.1.0",
  "description": "webpack setup for typescript/react from scratch",
  "scripts": {
    "dev": "webpack-dev-server --open --config webpack.dev.ts",
    "lint": "eslint ./src --ext .js,.jsx,.ts,.tsx",
    "test": "jest --watch",
    "test:no-watch": "jest",
    "build": "rm -f ./dist/bundle-*.js && webpack --mode production --config webpack.prod.ts"
  },
  "author": "Rahul Rakshit",
  "license": "ISC",
  "dependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.7.0",
    "@testing-library/react": "^10.0.4",
    "@testing-library/user-event": "^10.1.2",
    "@types/html-webpack-plugin": "^3.2.2",
    "@types/jest": "^25.2.1",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.7",
    "@types/shortid": "0.0.29",
    "@types/webpack": "^4.41.12",
    "@typescript-eslint/eslint-plugin": "^2.31.0",
    "@typescript-eslint/parser": "^2.31.0",
    "css-loader": "^6.7.3",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-react-app": "^5.2.1",
    "eslint-plugin-flowtype": "^4.7.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^4.0.0",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^25.5.4",
    "prettier": "^2.0.5",
    "shortid": "^2.2.15",
    "style-loader": "^1.2.1",
    "ts-jest": "^25.5.1",
    "ts-loader": "^9.4.2",
    "ts-node": "^8.10.1",
    "typescript": "^3.8.3",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^3.11.0"
  }
}
